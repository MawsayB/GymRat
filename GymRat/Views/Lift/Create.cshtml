@model GymRat.ViewModels.AddWorkoutViewModel

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<style>
    .across {
        width: 500px;
        font-size: 18px;
    }

    .button {
        background-color: white;
        color: #3F99DB;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        font-family: 'Century Gothic';
        font-size: 16px;
        font-weight: bold;
        text-decoration: none;
    }

    .button2 {
        background-color: white;
        color: #3F99DB;
        padding: 5px 10px;
        border-radius: 6px;
        cursor: pointer;
        font-family: 'Century Gothic';
        font-size: 12px;
        text-decoration: none;
        margin-left: 160px;
    }

    .date {
        width: 250px;
        margin-left: 110px;
        padding-left: 52px;
    }

    .down {
        margin-top: 20px;
        font-size: 18px;
        width: 250px;
        margin-bottom: 5px;
    }

    .dropdown {
        font-size: 16px;
    }

    .exerciseList {
        text-align: left;
    }

    .field-name {
        color: #3F99DB;
    }

    .form-control {
        font-size: 20px;
    }

    input[type="datetime"] {
        
    }

    label {
        text-align: left;
        color: #3F99DB;
    }

    .lift {
        font-size: 48px;
        padding-top: 5px;
        color: white;
    }

    .logo {
        width: 230px;
        height: 230px;
        margin-top: 110px;
        margin-left: 30px;
    }

    .num-box {
        width: 100px;
        margin-left: 60px;
    }

    p {
        font-weight: bold;
        color: #3F99DB;
    }

    .unboldLabel {
        font-weight: normal;
        color: white;
    }

    .same-line1{
        float: left;
        margin-top: 10px;
        margin-left: 40px;
    }

    .same-line1 label {
        margin-left: 55px;
    }

    .same-line2 {
        padding-right: 20px;
        float: left;
        margin-top: 10px;
    }

    .same-line2 label {
        margin-left: 55px;
    }

    select {
        border: 3px solid #3F99DB;
    }

    .workoutName {
        text-align: left;
    }
</style>
<body>
    <div class="col-lg-6">
        <img src="data:image/svg+xml;utf8;base64," class="logo" />
        <p class="lift">Lift</p>
    </div>

    <div class="col-lg-6 across">
        <br />
        <form asp-controller="Lift" asp-action="Create" method="post">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="field-name"></label>
                <input asp-for="Date" size="20" value="01/01/2018" class="form-control date" />
                <span asp-validation-for="Date"></span>
            </div>

            <div class="form-group exerciseList">
                <p>Select Exercise(s)</p>
                <h5>(in sequence of use)</h5>

                <div id="exerciseDropDown" class="exerciseDropDown">
                    <label for="ExerciseID" class="unboldLabel">Exercise 1: </label>
                    <div class="dropdown">
                        <select asp-for="ExerciseID" asp-items="Model.Exercises" id="dropdown" name="exerciseIds"></select>


                        <div>
                            <div class="form-group same-line1">
                                <label asp-for="ExpectedSets"></label>
                                <input class="form-control num-box" asp-for="ExpectedSets" />
                                <span asp-validation-for="ExpectedSets"></span>
                            </div>

                            <div class="form-group same-line2">
                                <label asp-for="ExpectedReps"></label>
                                <input class="form-control num-box" asp-for="ExpectedReps" />
                                <span asp-validation-for="ExpectedReps"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <input id="addExercise" class="button2" type="button" value="Add Another Exercise" />

            </div>

            <div class="form-group">
                <br />

                <input type="submit" class="button" value="Create Workout" />
            </div>
        </form>
    </div>
</body>

<script>
    //declare counter and populateMenu variables
    var counter = 1;
    var populateMenu = $(".dropdown");

    //upon click, increase the counter by 1
    $("#addExercise").click(function () {
        counter++;
        $()
        //attach a label of Exercise X and the dropdown menu
        $("#exerciseDropDown").append("<br/> Exercise " + counter + ": ").append(populateMenu.clone());
    });

</script>
