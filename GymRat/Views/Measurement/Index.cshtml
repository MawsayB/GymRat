@model List<Consistency.ViewModels.MeasuringIndexViewModel>

@{
    Layout = "~/Views/Shared/_LoggedIn.cshtml";
}

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
    .bodyZone {
        display: inline-block;
    }

    form {
        text-align: left;
        margin-left: 15%;
    }

    .logo {
        margin-left: 580px;
    }

    table {
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        border: 2px solid #3F99DB;
    }

        table td {
            border: 2px solid #3F99DB;
            font-size: 20px;
        }


    table {
        width: 35%;
        margin-left: auto;
        margin-right: auto;
        border: 2px solid #3F99DB;
    }

        table th {
            font-size: 36px;
            border: 2px solid #3F99DB;
        }

    .update-button {
        padding: 10px 25px;
        margin: -42px 0px;
    }
</style>

<body>
    <div>
        <a href="http://localhost:65225/Measuring/Add" class="button update-button">Update</a>
        <img src="data:image/svg+xml;utf8;base64," class="logo" />
    </div>
    <p>Measure</p>

    <hr />
    <h2>Progress</h2>

    <table>
        @foreach (var measure in Model)
        {
            <tr>
                <th>Butt</th>
                <th>Thigh</th>
                <th>Waist</th>
            </tr>

            <tr>
                <td>@measure.Size inches</td>
            </tr>
        }

    </table>
    @if (Model.Count <= 0)
    {
        <h3>No results to show</h3>
    }
    <br />

    <hr />
</body>
