@{
    Layout = "~/Views/Shared/_LoggedIn.cshtml";
}

@model Consistency.ViewModels.AddMeasureViewModel

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
    .button2 {
        font-size: 16px;
        float: none;
    }

    input.align {
        margin-left: 50px;
    }

    input.align2 {
        margin-left: 65px;
    }

    .center {
    }

    form {
        text-align: left;
        margin-left: 10px;
    }

    label {
        text-align: left;
    }

    .logo {
        margin-left: 580px;
    }

    select.align {
        margin-left: 42px;
    }

    .select {
        font: normal 36px;
    }
</style>

<body>

    <img src="data:image/svg+xml;utf8;base64," class="logo"
         width="170" height="213" />

    <p>Update</p>
    <hr />

    <form asp-controller="Measuring" asp-action="Add" method="post">

        <div class="form-group">
            <input asp-for="Date" size="35" placeholder="Date" />
            <span asp-validation-for="Date"></span>
        </div>

        <div class="form-group">
            <input asp-for="Region" size="35" placeholder="region" />
            <span asp-validation-for="Region"></span>
        </div>

        <div class="form-group">
            <input asp-for="Size" size="35" placeholder="inches" />
            <span asp-validation-for="Size"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="button button2" value="Save" />
        </div>

    </form>

</body>
