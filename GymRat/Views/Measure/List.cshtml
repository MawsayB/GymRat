@model IEnumerable<GymRat.Models.Measure>

<style>
    tr td {
        font-size: 20px;
    }

    .button {
        background-color: white;
        color: #3F99DB;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        font-family: 'Century Gothic';
        font-size: 16px;
        font-weight: bold;
        text-decoration: none;
    }

    h3 {
        color: #3F99DB
    }

    .logo {
        width: 230px;
        height: 230px;
    }

    .search {
        font-size: 20px;
        font-weight: bold;
    }

    .headline {
        font-size: 48px;
    }

    table {
        width: 35%;
        margin-left: auto;
        margin-right: auto;
        border: 4px solid #3F99DB;
    }

    table th {
       font-size: 36px;
       border: 4px solid #3F99DB;
       text-align: center;
    }

    table tr td {
        padding: 4px;
    }

    table tr {
        border: 4px solid #3F99DB;
     }

    input[type="radio"] {
        margin: 0 0px 0 15px;
    }
</style>

<body>
    <br />
    <div>
        <div class="col-lg-4">
            <a href="/Measure"><img src="data:image/svg+xml;utf8;base64," class="logo" /></a>
            <p class="headline">Measure</p>
            <a href="https://localhost:44357/Measure/List" class="button" style="text-decoration:none">Records</a>
            <br />
            <br />
            <br />
            <a href="https://localhost:44357/Measure/Add" class="button margin" style="text-decoration:none">Update</a>
            <br />
            <br />
        </div>
        <br />


        <p class="headline">My Records</p>

        <table>
            <tr>
                <th>Date</th>
                <th>Region</th>
                <th>Size</th>
            </tr>
            @foreach (var measurement in Model)
            {
            <tr>
                <td>@measurement.Date.ToShortDateString()</td>
                <td>@measurement.Region</td>
                <td>@measurement.Size</td>
            </tr>
            }
        </table>
    </div>

    @if (Model.Count() == 0)
    {
        <h3>Add an Update</h3>
    }
    <br />
</body>