@model GymRat.ViewModels.AddMeasureViewModel

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>

    .button {
        background-color: white;
        color: #3F99DB;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        font-family: 'Century Gothic';
        font-size: 16px;
        font-weight: bold;
        text-decoration: none;
    }

    form {
        font-size: 20px;
        display: inline-block;
        float: left;
    }

    .form-control {
        font-size: 20px;
    }

    h2 {
        text-align: left;
        margin-left: 40px;
    }
    
    .logo {
        width: 230px;
        height: 230px;
    }

    .headline {
        font-size: 48px;
    }

</style>

<body>

    <br />
    <div>
        <div class="col-lg-6">
            <img src="data:image/svg+xml;utf8;base64," class="logo" />
            <p class="headline">Measure</p>
        </div>

        <div class="col-lg-6">
            <h2 class="headline">Update</h2>
            <br />

            <form asp-controller="Measure" asp-action="Add" method="post">

                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input asp-for="Date" size="35" class="form-control" />
                    <span asp-validation-for="Date"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BodyRegionID"></label>
                    <input asp-for="BodyRegionID" class="form-control">
                    <select asp-for="BodyRegionID" asp-items="@Model.BodyRegions"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Size"></label>
                    <input asp-for="Size" class="form-control">
                    <span asp-validation-for="Size"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="button" value="Save" />
                </div>

            </form>
        </div>
        </div>

</body>
